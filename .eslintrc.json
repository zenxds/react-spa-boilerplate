{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "react"
  ],
  "rules": {
    "no-unused-vars": 0,
    "no-console": 0,
    // 行尾必须加分号
    "semi": 0,
    // 文件末尾必须留空行
    "eol-last": 0,

    // React必须作为全局变量
    "react/react-in-jsx-scope": 0,
    // prop必须校验
    "react/prop-types": 0
  }
}
